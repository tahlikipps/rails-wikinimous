
<h2>All Articles</h2>

<% if @articles.count != 0 %>
  <div class="article-card-container">
    <% @articles.each do |article|  %>
      <div class="article-card">
        <%= link_to article.title, article_path(article) %>
        <p><%= article.content %>
      </div>
    <% end %>
  </div>
<% else %>
  <%= "No articles found!" %>
<% end %>

  <hr>
  <%= link_to new_article_path do %><i class="fa-solid fa-plus"></i> Add an article<% end %>
