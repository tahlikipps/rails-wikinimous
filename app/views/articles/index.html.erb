<h2>All Articles</h2>

<% if @articles.count != 0 %>
  <ul style="list-style-type: none;">
    <% @articles.each do |article|  %>
      <li>
        <%= link_to article.title, article_path(article) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= "No articles found!" %>
<% end %>
<%= link_to "Add an article", new_article_path %>
